set ignorecase
set smartcase
set hlsearch
set incsearch
set cursorline
set scrolloff=3
set scrolljump=5
set clipboard=unnamedplus,autoselect

nnoremap U <C-R>
nnoremap Y y$
nnoremap Q gQ

eclipseaction findref org.eclipse.jdt.ui.edit.text.java.search.references.in.workspace
nmap gr :findref<enter>

eclipseaction togglecomment org.eclipse.jdt.ui.edit.text.java.toggle.comment
nmap gcc :togglecomment<cr>
vmap gc :togglecomment<cr>

eclipseuiaction gotodefinition org.eclipse.jdt.ui.edit.text.java.open.editor
autocmd "Java Editor" nmap gd :gotodefinition<enter>
autocmd "Class File Viewer" nmap gd :gotodefinition<enter>
eclipseuiaction gotodefinitionxtext org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration
autocmd "Xtext Editor" nmap gd :gotodefinitionxtext<enter>

eclipseuiaction eclipsegotoimpl org.eclipse.jdt.ui.edit.text.java.open.implementation
nnoremap gI :eclipsegotoimpl<cr>

" go to super implementation
eclipseaction eclipsegotosuper org.eclipse.jdt.ui.edit.text.java.open.super.implementation
nnoremap gzi :eclipsegotosuper<cr>

"show refactor menu
eclipseaction eclipserefactormenu org.eclipse.jdt.ui.edit.text.java.refactor.quickMenu
nnoremap <space>rr :eclipserefactormenu<cr>

" rename current symbol
eclipseaction eclipserename org.eclipse.jdt.ui.edit.text.java.rename.element
nnoremap <space>rn :eclipserename<cr>

eclipseuiaction opentype org.eclipse.jdt.ui.navigate.open.type
nmap ,f :opentype<enter>

eclipseaction backwardhistory org.eclipse.ui.navigate.backwardHistory
eclipseaction forwardhistory org.eclipse.ui.navigate.forwardHistory

nmap <C-o> :backwardhistory<enter>
nmap <C-i> :forwardhistory<enter>

eclipseuiaction quickoutline org.eclipse.jdt.ui.edit.text.java.show.outline
nmap ,o :quickoutline<enter>

eclipseaction eclipsenextitem org.eclipse.ui.navigate.next
nnoremap ]c :eclipsenextitem<cr>
eclipseaction eclipsepreviousitem org.eclipse.ui.navigate.previous
nnoremap [c :eclipsepreviousitem<cr>

eclipseaction eclipsenextmember org.eclipse.jdt.ui.edit.text.java.goto.next.member
nnoremap ]] :eclipsenextmember<cr>
eclipseaction eclipseprevmember org.eclipse.jdt.ui.edit.text.java.goto.previous.member
nnoremap [[ :eclipseprevmember<cr>

" show documentation for current symbol
eclipseuiaction eclipseshowdoc org.eclipse.ui.edit.text.showInformation
nnoremap K   :eclipseshowdoc<cr>

"show quickfix menu
eclipseuiaction eclipsequickfix org.eclipse.jdt.ui.edit.text.java.correction.assist.proposals
nnoremap <backspace> :eclipsequickfix<cr>
vnoremap <backspace> :eclipsequickfix<cr>

eclipseaction eclipseopenresource org.eclipse.ui.navigate.openResource
nnoremap ,r :eclipseopenresource<cr>

" amazing 'omnibox' that searches buffers, commands, views, menus, preferences, etc.
eclipseaction eclipsecmdsearch org.eclipse.ui.window.quickAccess
nnoremap ,a :eclipsecmdsearch<cr>

" navigate to open editor
eclipseaction eclipseopeneditor org.eclipse.ui.window.openEditorDropDown
nnoremap ,b :eclipseopeneditor<cr>


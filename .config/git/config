[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    light = true
    ; side-by-side = true

    ; generic color scheme
    ; map-styles = bold purple => syntax "#ffe0f0", bold cyan => syntax "#d0fff8"
    ; minus-style = "syntax auto"
    ; minus-emph-style = "syntax auto"

    ; Dayfox color scheme
    map-styles = bold purple => syntax "#e6cee3", bold cyan => syntax "#cddad8" ;blend bg1 with pink and cyan at 0.2
    minus-style = "syntax #e6c8c8"      ;blend bg1 with red at 0.2
    minus-emph-style = "syntax #d69fa2" ;blend bg1 with red at 0.4
    plus-style = "syntax #d0d6cd"       ;blend bg1 with green at 0.2
    plus-emph-style = "syntax #aabbab"  ;blend bg1 with green at 0.4

    line-numbers = true
    file-decoration-style = "green ul"
    file-style = "green bold"

[alias]
    lg = -c diff.external=difft log --ext-diff
    sh = -c diff.external=difft show --ext-diff
    df = -c diff.external=difft diff
    pf = push --force-with-lease
    claim = blame -M -C -C -C

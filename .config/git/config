    email = vital.wang@hotmail.com
[init]
    defaultBranch = main
[credential]
    helper = cache
[core]
    hooksPath = ~/.config/git/hooks/
[push]
    autoSetupRemote = true
[merge]
    conflictStyle = zdiff3
[diff]
    colorMoved = default

[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    light = true
    ; side-by-side = true
    map-styles = bold purple => syntax "#ffe0f0", bold cyan => syntax "#d0fff8"
    minus-style = "syntax auto"
    minus-emph-style = "syntax auto"
    line-numbers = true
    file-decoration-style = "green ul"
    file-style = "green bold"

[alias]
    lg = -c diff.external=difft log --ext-diff
    sh = -c diff.external=difft show --ext-diff
    df = -c diff.external=difft diff
    pf = push --force-with-lease
    claim = blame -M -C -C -C
